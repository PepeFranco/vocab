{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2019",
    "noEmit": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "exclude": ["**/node_modules/**", "**/dist/**"]
}
